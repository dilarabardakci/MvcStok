@using MvcStok.Models.Entity
@using PagedList;
@using PagedList.Mvc;
@*@model PagedList.IPagedList<TBLKATEGORILER>*@

@model dynamic
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered ">
    <tr>
        <th>Kategori ID</th>
        <th>Kategori Adi</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>
    <tbody>
        @foreach (var ktgr in Model)
        {
            <tr>
                <th>@ktgr.KATEGORIID</th>
                @*// th kalın punto olması için head*@
                <td>@ktgr.KATEGORIAD</td>
                <td><a href="/KATEGORI/SIL/@ktgr.KATEGORIID" class="btn btn-danger"> SİL </a> </td>
                <td><a href="/KATEGORI/KategoriGetir/@ktgr.KATEGORIID" class="btn btn-success">GÜNCELLE</a> </td>
                <td>@Html.ActionLink("SİL BUTONU","SIL",new { id=ktgr.KATEGORIID},new { @class="btn btn-warning",onclick="return confirm('Silmek İstediğinden Emin Misin?')"})</td>
            </tr>
        }
    </tbody>
</table>
@Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa }))@*sayfalama için kullandık.*@
<a href="/KATEGORI/YeniKategori/" class="btn btn-primary">Yeni Kategori Ekle</a>
